{
  "emote_wheel_screen": {
    "$default_text_color": [0.2, 0.2, 0.2],
    "force_render_below": true,
    "$screen_content": "persona.touch_grass",
    "$screen_bg_content": "persona.emote_wheel_touch_zone",
    "button_mappings": []
  },

  "emote_wheel_touch_zone@common_buttons.light_content_button": {
    "size": ["100%", "100%"],
    "alpha": 0,
    "controls": [
      {
        "emote_wheel_touch_zone@common_buttons.light_content_button": {
          "size": ["100%", "100%"],
          "$pressed_button_name": "button.menu_exit",
          "alpha": 0
        }
      }
    ],
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "mod_menu",
        "source_property_name": "(not #toggle_state)",
        "target_property_name": "#visible"
      }
    ],
    "button_mappings": [
      {
        "from_button_id": "key.emote",
        "to_button_id": "button.menu_exit",
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.menu_cancel",
        "to_button_id": "button.menu_exit",
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.menu_exit",
        "to_button_id": "button.menu_exit",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.controller_start",
        "to_button_id": "button.dressing_room",
        "mapping_type": "global"
      }
    ]
  },

  "touch_grass": {
    "type": "panel",
    "controls": [
      {
        "header@how_to_play_common.header": {
          "$text": "Edit Menu",
          "size": [120, 20],
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "offset": [-29, 2]
        }
      },
      { "client_menu_toggle@hud.client_menu_toggle": {} },
      { "emote_wheel_screen_content@persona.emote_wheel_screen_content": {} }
    ]
  },

  "emote_wheel_screen_content": {
    "$default_text_color": [0.7, 0.7, 0.7],
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "mod_menu",
        "source_property_name": "(not #toggle_state)",
        "target_property_name": "#visible"
      }
    ]
  }
}
