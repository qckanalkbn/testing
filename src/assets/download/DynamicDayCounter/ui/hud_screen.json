{
  "client_menu_toggle@common_toggles.light_text_toggle": {
    "$toggle_view_binding_name": "mod_menu",
    "offset": [40, 0],
    "size": [20, 20],
    "layer": 50,
    "$button_text": "+",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle"
  },

  "client_panel": {
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_back",
        "value": {
          "9@client_template_toggle": {
            "$button_text": "Day Right",
            "$toggle_view_binding_name": "day_right"
          }
        }
      }
    ]
  },

  "client_panel_1": {
    "type": "stack_panel",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "offset": [-25, 2],
    "size": [128, "100%c"],
    "controls": [
      { "header": { "type": "panel", "size": [120, 20] } },
      {
        "9@client_template_toggle": {
          "$button_text": "Day Right",
          "$toggle_view_binding_name": "day_right"
        }
      }
    ]
  },

  "hud_screen": { "always_accepts_input": true },

  "hud_content": {
    "$is_coordinates_hud|default": false,
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_front",
        "value": [
          {
            "client_menu_toggl_1@client_menu_toggle": {
              "$template_toggle": "common.toggle",
              "ignored": "$is_coordinates_hud"
            }
          },
          {
            "client_panel_1@client_panel_1": {
              "ignored": "$is_coordinates_hud"
            }
          }
        ]
      }
    ]
  },

  "client_template_toggle@common_toggles.button_with_checkbox_toggle": {
    "size": [120, 20],
    "$button_offset": [5, 0],
    "layer": 50,
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "mod_menu",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },

  "number_of_days_played": {
    "type": "panel",
    "size": ["100%c", "100%c"],
    "controls": [
      {
        "draggable": {
          "type": "input_panel",
          "draggable": "both",
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "size": ["100%c", "100%c"],
          "button_mappings": [
            {
              "from_button_id": "button.menu_select",
              "to_button_id": "button.menu_select",
              "mapping_type": "pressed",
              "button_up_right_of_first_refusal": true
            }
          ],
          "controls": [
            {
              "bg": {
                "type": "image",
                "size": ["100%c + 6px", "100%c + 2px"],
                "texture": "textures/ui/Black",
                "alpha": 0.7,
                "controls": [
                  {
                    "number_of_days_played_text": {
                      "type": "label",
                      "anchor_from": "bottom_middle",
                      "anchor_to": "bottom_middle",
                      "layer": 1,

                      "enable_profanity_filter": false,
                      "color": "$chat_text_color",
                      "text": "#text",
                      "shadow": true,

                      "bindings": [
                        {
                          "binding_name": "#number_of_days_played_text",
                          "binding_name_override": "#raw_day_string",
                          "binding_condition": "always",
                          "binding_type": "global"
                        },
                        {
                          "binding_type": "view",
                          "source_property_name": "(#raw_day_string - '-1' - '-2' - '-3' - '-4' - '-5' - '-6' - '-7' - '-8' - '-9')",
                          "target_property_name": "#remove_neg_number"
                        },
                        {
                          "binding_type": "view",
                          "source_property_name": "(#remove_neg_number - '1' - '2' - '3' - '4' - '5' - '6' - '7' - '8' - '9' - '0')",
                          "target_property_name": "#day_string"
                        },
                        {
                          "binding_type": "view",
                          "source_property_name": "(#raw_day_string - #day_string)",
                          "target_property_name": "#day_number"
                        },
                        {
                          "binding_type": "view",
                          "source_property_name": "(#day_string + (#day_number + $start_day))",
                          "target_property_name": "#text"
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ],
    "bindings": [
      {
        "binding_name": "#number_of_days_played_visible",
        "binding_condition": "always",
        "binding_type": "global"
      },
      {
        "binding_type": "view",
        "source_control_name": "day_right",
        "source_property_name": "#toggle_state",
        "target_property_name": "#toggle_state"
      },
      {
        "binding_type": "view",
        "source_property_name": "(#number_of_days_played_visible and not #toggle_state)",
        "target_property_name": "#visible"
      }
    ]
  },

  "day_counter_right": {
    "type": "panel",
    "size": ["100%c", "100%c"],
    "anchor_from": "top_right",
    "anchor_to": "top_right",
    "controls": [
      {
        "drag": {
          "type": "input_panel",
          "draggable": "both",
          "size": ["100%c", "100%c"],
          "anchor_from": "top_right",
          "anchor_to": "top_right",
          "button_mappings": [
            {
              "from_button_id": "button.menu_select",
              "to_button_id": "button.menu_select",
              "mapping_type": "pressed",
              "button_up_right_of_first_refusal": true
            }
          ],
          "controls": [
            {
              "bg": {
                "type": "image",
                "size": ["100%c + 6px", "100%c + 2px"],
                "texture": "textures/ui/Black",
                "alpha": 0.7,
                "controls": [
                  {
                    "label": {
                      "type": "label",
                      "text_alignment": "right",
                      "anchor_from": "bottom_middle",
                      "anchor_to": "bottom_middle",
                      "layer": 1,

                      "enable_profanity_filter": false,
                      "color": "$chat_text_color",
                      "text": "#text",
                      "shadow": true,
                      "bindings": [
                        {
                          "binding_type": "view",
                          "source_control_name": "number_of_days_played_text",
                          "source_property_name": "(#day_string + (#day_number + $start_day))",
                          "target_property_name": "#text"
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ],
    "bindings": [
      {
        "binding_name": "#number_of_days_played_visible",
        "binding_condition": "always",
        "binding_type": "global"
      },
      {
        "binding_type": "view",
        "source_control_name": "day_right",
        "source_property_name": "#toggle_state",
        "target_property_name": "#toggle_state"
      },
      {
        "binding_type": "view",
        "source_property_name": "(#number_of_days_played_visible and #toggle_state)",
        "target_property_name": "#visible"
      }
    ]
  },

  "day_counter_and_notifications": {
    "type": "panel",
    "anchor_from": "top_right",
    "anchor_to": "top_right",
    "controls": [
      {
        "content": {
          "type": "stack_panel",
          "size": ["100%cm", "100%c"],
          "anchor_from": "top_right",
          "anchor_to": "top_right",
          "controls": [
            {
              "notifications_wrapper": {
                "type": "panel",
                "size": ["100%c", "100%c"],
                "anchor_from": "top_right",
                "anchor_to": "top_right",
                "controls": [
                  {
                    "day_notification_factory": {
                      "type": "stack_panel",
                      "size": ["100%c", "100%c"],
                      "anchor_from": "top_right",
                      "anchor_to": "top_right",
                      "factory": {
                        "control_name": "hud.day_notification_wrapper"
                      },
                      "collection_name": "day_notification",
                      "bindings": [
                        {
                          "binding_type": "view",
                          "source_control_name": "number_of_days_played_text",
                          "source_property_name": "(((#day_number + $start_day) = 100) or ((#day_number + $start_day) = 1000) or ((#day_number + $start_day) = 10000) or ((#day_number + $start_day) = 100000))",
                          "target_property_name": "#special_day"
                        },
                        {
                          "binding_type": "view",
                          "source_property_name": "(#special_day * 1)",
                          "target_property_name": "#collection_length"
                        }
                      ]
                    }
                  }
                ]
              }
            },
            { "day_counter_right@day_counter_right": {} }
          ]
        }
      }
    ]
  },

  "day_notification_wrapper": {
    "type": "panel",
    "size": ["100%c", "100%c"],
    "controls": [
      {
        "day_notification_bg": {
          "type": "image",
          "layer": -10,
          "size": ["100%c", "36px"],
          "anims": [
            "@hud.dura_srart_offset",
            "@hud.dura_wait_offset",
            "@hud.dura_srart_alpha"
          ],
          "texture": "textures/ui/greyBorder",
          "controls": [
            {
              "durability_ping_content": {
                "type": "stack_panel",
                "size": ["100%c", "100%"],
                "orientation": "horizontal",
                "anchor_from": "left_middle",
                "anchor_to": "left_middle",
                "controls": [
                  { "padding_0": { "type": "panel", "size": [8, 0] } },
                  { "cake_icon@hud.cake_icon_wrapper": {} },
                  { "padding_1": { "type": "panel", "size": [5, 0] } },
                  { "special_text@hud.special_text_wrapper": {} },
                  { "padding_2": { "type": "panel", "size": [8, 0] } }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "cake_icon_wrapper": {
    "type": "panel",
    "size": ["100%y", "100%"],
    "controls": [
      {
        "cake_icon": {
          "type": "image",
          "size": [22, 22],
          "texture": "textures/ui/icon_cake"
        }
      }
    ]
  },

  "special_text_wrapper": {
    "type": "panel",
    "size": ["100%c", "100%"],
    "controls": [
      {
        "special_text": {
          "type": "label",
          "text": "#text",
          "offset": [0, -1],
          "layer": 5,
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "number_of_days_played_text",
              "source_property_name": "('Congratulation, Day: ' + (#day_number + $start_day))",
              "target_property_name": "#text"
            }
          ]
        }
      }
    ]
  },

  "dura_srart_offset": {
    "anim_type": "offset",
    "from": ["120%", 0],
    "to": [0, 0],
    "duration": 0.8
  },
  "dura_wait_offset": {
    "anim_type": "wait",
    "duration": 3,
    "next": "@hud.dura_end_offset"
  },
  "dura_end_offset": {
    "anim_type": "offset",
    "from": [0, 0],
    "to": ["120%", 0],
    "duration": 0.8
  },
  "dura_srart_alpha": {
    "anim_type": "wait",
    "duration": 3,
    "next": "@hud.dura_end_alpha"
  },
  "dura_end_alpha": {
    "anim_type": "alpha",
    "from": 1,
    "to": 0,
    "duration": 1.6
  },

  "centered_gui_elements": {
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_front",
        "value": [
          { "day_counter_and_notifications@day_counter_and_notifications": {} }
        ]
      }
    ],
    "bindings": [
      {
        "binding_name": "#hud_visible_centered",
        "binding_name_override": "#visible",
        "binding_type": "global"
      }
    ]
  },
  "not_centered_gui_elements": {
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_front",
        "value": [
          {
            "day_counter_and_notifications@day_counter_and_notifications": {
              "offset": [0, -36]
            }
          }
        ]
      }
    ]
  }
}
